<%= form_for @changeset, @action, [autocomplete: "off"], fn f -> %>
  <%= PBF.text_input f, :title %>

  <%= PBF.textarea f, :body, [input: [rows: 10]] %>

  <%= PBF.submit f, submit_text(@changeset), class: "btn btn-primary float-right" %>
<% end %>

<%= link "Cancel", to: Routes.project_path(@conn, :show, @project), class: "btn btn-link" %>
