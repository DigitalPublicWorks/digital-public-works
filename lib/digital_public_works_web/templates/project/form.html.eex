<%= form_for @changeset, @action, [autocomplete: "off"], fn f -> %>

  <%= PBF.text_input f, :title, label: [text: "Project Title"] %>

  <%= PBF.textarea f, :body, input: [rows: 6], label: [text: "Briefly describe the problem you are trying to solve. Mention who is affected by it, where it is happening, and how you are trying to solve it."] %>

  <%= PBF.submit f, submit_text(@changeset), class: "btn btn-primary float-right" %>
<% end %>
